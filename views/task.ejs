    <body>
        <nav class="shadow-sm">
            <a class="imgnone" href="index.html">
                <img src="img/TweetWallet green.jpg" width="200" height="50" alt="">
            </a>

            <ul>
                <li class="nav-item navigation" data-tab="tab-1">
                    <a class="nav-link link-text text-ref text-muted" href="/dashboard"><span><i
                                class="fas fa-rocket"></i></span> Choose a plan</a>
                </li>
                <li class="nav-item navigation current" data-tab="tab-2">
                    <a class="nav-link link-text text-ref text-muted" href="/task"><span><i
                                class="fas fa-life-ring"></i></span> Overview</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-3">
                    <a class="nav-link link-text text-ref text-muted" href="/withdraw"><span><i
                                class="fas fa-money-check"></i></span> Withdraw</a>
                </li>
            </ul>
        </nav>

        <main role="main" class="mt-4">
            <div class="container">
                <header class="row justify-content-between pt-4 pl-3 pr-3 pb-5">
                    <div>
                        <span class="text-muted">Howdy</span> <span class="username"> <%= user.username %> &#9995;</span>
                    </div>
                    <a class="pr-1" href="/profile"><i class="fas text-success fa-user-circle">

                        </i></a>
                </header>
                <%- include('partials/messages') %>
                <!--OVERVIEW-->

                <div id="tab-2" class=" pb-5 mb-5">
                    <div class="container">
                        <div class="row">
                            <div class="text-secondary currentplan col-lg-4 pb-4">
                                <div>
                                    <h4 class="cplan"><b> CURRENT PLAN </b></h4>
                                   <% if(plan === null){ %>
                                         <h4 id="current-plan" class="text-success card-paragraph select-plan"> You have
                                             to
                                             choose a plan
                                         </h4>
                                   <% }else{ %>
                                         <h4 id="current-plan" class="text-success card-paragraph select-plan"> 
                                             <%= plan.sub %>
                                         </h4>
                                   <% } %>
                                   

                                </div>
                                <div>

                                </div>
                            </div> 







                            <div class="col-12 pb-2 mt-5">
                                <h3 class="todaytask"> Today's Tasks
                                </h3>
                            </div>



                            <div class="col-lg-4 col-md-12">
                                <h5 class="font-weight-light copy"> Task 1: Copy the content below and share on your
                                    twitter
                                    account</h5>

                                <div class="card p-3 mx-auto mb-4 text-light bg-dark">
                                    <h6 class="font-weight-light h5-text">
                                        <img style="width: 100%;" src="" alt=""> <br>
                                      Nigerian youths are finally making money by “pressing phone” with the help of
                                      tweetwallet. Join now to start posting sponsored adverts on your twitter page and
                                      get paid twice monthly. Go to https://tweetwallet.co to register and become an
                                      influencer today!!

                                    </h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <h5 class="font-weight-light copy"> 2: Copy the content below and share on your twitter
                                    account.</h5>
                                <div class="card p-3 mx-auto text-light mb-4 bg-dark">
                                    <h6 class="h5-text font-weight-light">
                                Do you have a story to tell? Contact us today @ https://tweetwallet.co and let us help
                                you reach your audience
                                        <div class="ripple-decorator"></div>
                                    </h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <h5 class="font-weight-light copy"> 3: Copy the content below and share on your twitter
                                    account.</h5>
                                <div class="card p-3 mx-auto text-light mb-4 bg-dark">
                                    <h6 class="h5-text font-weight-light">
                                      Advertise your business with us and let our dedicated team of creatives sell your
                                      “market”.. Go to https://tweetwallet.co to contact us and take advantage of our
                                      wide service range today!!
                                        <div class="ripple-decorator"></div>
                                    </h6>
                                </div>
                            </div>


                            <div class="col-12 pb-2 mt-5">
                                <h3 class="todaytask"> Task Submission
                                </h3>
                            </div>
                            <div class="col-12 mb-0 task">
                                <div class="alert alert-dismissible font-weight-lighter alert-info mt-2">

                                    Task Submission must be done before 8pm for each day.

                                </div>
                            </div>
                            <!-- <div class="col-12 mb-0 task">
                                 <div class="alert alert-dismissible font-weight-lighter alert-danger mt-2">

                                     You haven't submitted any task today

                                 </div>
                             </div> -->
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form id="taskForm" action="/task/<%= user._id %>" method="POST">

                                            <div class="form-group">
                                                <label class="d-none">Username</label>
                                                <input type="text" name="username" id="username"
                                                    class="form-control input-md d-none" value="<%= user.username %>"
                                                    required>
                                            </div>
                                             <div class="form-group">
                                                <label class="d-none">plan</label>

                                                   <% if(plan === null) { %>
                                                     <input type="text" name="sub" id="plan"
                                                         class="form-control input-md d-none" value="No Plans Yet"
                                                         required>
                                                    <% }else{ %>
                                                         <input type="text" name="sub" id="plan"
                                                             class="form-control input-md d-none"
                                                             value="<%= plan.daily %>" required>
                                                        <% } %>

                                               
                                            </div>
                                            <div class="form-group">
                                                <label class="d-none">daily</label>

                                                <% if(plan === null) { %>
                                                    <input type="text" name="daily" id="daily"
                                                        class="form-control input-md d-none" value="0"
                                                        required>
                                               <% }else{ %>
                                                <input type="text" name="daily" id="daily"
                                                    class="form-control input-md d-none" value="<%= plan.daily %>"
                                                    required>
                                               <% } %>

                                            </div>
                                            <div class="form-group">
                                                <label class="sr-only">Task one</label>
                                                <input type="url" name="task1" id="task1" class="form-control input-md"
                                                    placeholder="Task one" required>
                                            </div>
                                            
                                            <div class="form-group">
                                                <label class="sr-only">Task two</label>
                                                <input type="url" name="task2" id="task2" class="form-control input-md"
                                                    placeholder="Task two" required>
                                            </div>
                                            <div class="form-group">
                                                <label class="sr-only">Task three</label>
                                                <input type="url" name="task3" id="task3" class="form-control input-md"
                                                    placeholder="Task three" required>
                                            </div>

                                            <% if(plan === null) { %>
                                                    <button type="submit" class="btn btn-success" disabled>Submit Links
                                                        for confirmation</button>
                                                <% } else { %>
                                             <button type="submit" class="btn btn-success">Submit Links
                                                for confirmation</button> 
                                                 <% } %> 
                                        </form>
                                    </div>



                                    <div class="container pt-3">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="jumbotron">
                                                    <p class="text-danger h5-text"> Please note that
                                                        posting incorrect links or tweets may lead to account
                                                        suspension.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                             <div class="col-md-12 pb-5">
                                <div class="col-12">
                                    <h4 class="text-center">Task History</h4>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="S/N">S/N</th>
                                                <th scope="Status">Task1</th>
                                                <th scope="Status">Task2</th>
                                                <th scope="Date">Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           <% task.forEach(function(task){ %>
                                           <% if(task.accountbalance > 0){ %>
                                                <tr>
                                                    <% if(task.allowBalance){ %>
                                                    <td>Approved</td>
                                                    <%}else{%>
                                                    <td>Awaiting Approval</td>
                                                    <%}%>
                                                      <td id="taskStatus"><a
                                                              href="<%= task.task1 %>">Task One</a></td>
                                                    <td><a href="<%= task.task2 %>"><%= Task Two %></a></td>
                                                    <td><a href="<%= task.task3 %>"><%= Task Three %></a></td>
                                                    <td><%= task.date %></td>
                                                </tr>
                                           <% } %>


                                              
                                           <% }) %>
                                          
                                        </tbody>
                                    </table>
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <script src="js/dashboard.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
        </script>
        <script src="/js/bootstrap.bundle.min.js"
            integrity="sha384-6khuMg9gaYr5AxOqhkVIODVIvm9ynTT5J4V1cfthmT+emCG6yVmEZsRHdxlotUnm" crossorigin="anonymous">
        </script>
        <script src="js/app.js"></script>
    </body>
</html>
