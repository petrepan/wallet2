    <body class="text-center">
        <form action="/reset-password/<%= resetLink %>?_method=PUT " method="POST" class="pt-5 needs-validation" novalidate>
            <div class="container d-flex pt-5 justify-content-center">
                <div class="">
                    <a href="/"><img class="mb-4" src="/img/TweetWallet green.jpg" alt="logo" width="220"
                            height="50"></a>
                    <%- include('partials/messages') %>
                    <h1 class="h4 mb-4 font-weight-normal">Recover your Password</h1>
                    <div class="mb-3 mt-3">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="New Password"
                            required autofocus="">
                    </div>
                     <div class="mb-3 mt-3">
                         <label for="password" class="sr-only">Confirm Password</label>
                         <input type="password" name="password2" id="password" class="form-control" placeholder="Confirm Password"
                             required autofocus="">
                     </div>

                    <button class="btn btn-lg h5-text btn-success btn-block" type="submit">Update Password</button>
                </div>
            </div>
        </form>

