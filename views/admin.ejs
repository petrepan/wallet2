                box-sizing: border-box;
            }

            body {
                background: #eafbea;
            }

            nav {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                background-color: #fff;
                z-index: 3;
            }

            .imgnone {
                display: none;
            }

            .nav-item span {
                display: block;
            }

            ul {
                list-style: none;
                display: flex;
                justify-content: center;
                align-items: center;
                margin: 10px;
                text-align: center;
            }

            .current {
                background-color: #eafbea;
                border-radius: 5px;
            }

            .tab-content {
                display: none;
            }



            .current {
                display: inherit;
            }

            .current i {
                color: green;
            }

            .username {
                font-size: 24px;
                font-weight: 600;
            }

            .fa-user-circle {
                font-size: 42px;
            }

            .shield {
                display: block;
            }

            .shield i {
                font-size: 32px;
            }

            .currentplan {
                border: 1px solid green;
                padding: 16px;
                border-radius: 6px;
            }

            .cplan {
                font-weight: 100;
                font-size: 13px;
            }

            .todaytask::before {
                content: "";
                background-color: rgba(0, 102, 0, 0.278);
                bottom: 0;
                height: 15px;
                width: 150px;
                position: absolute;
                z-index: -1;
            }

            .todaytask {
                position: relative;
                z-index: 1;
            }

            .withdrawss {
                border: 1px solid green;
                padding: 16px;
                border-radius: 6px;
            }

            .amount {
                font-size: 32px;
            }

            .copy {
                font-size: 16px;
            }

