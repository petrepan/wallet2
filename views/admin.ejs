    <body>
        <nav class="shadow-sm">
            <a class="imgnone" href="index.html">
                <img src="img/TweetWallet green.jpg" width="200" height="50" alt="">
            </a>

            <ul>
                <li class="nav-item navigation current" data-tab="tab-1">
                    <a class="nav-link link-text text-ref text-muted" href="admin"><span><i
                                class="fas fa-rocket"></i></span> All Users</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-2">
                    <a class="nav-link link-text text-ref text-muted" href="admin/withdrawal"><span><i
                                class="fas fa-life-ring"></i></span> Withdrawal</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-3">
                    <a class="nav-link link-text text-ref text-muted" href="admin/task"><span><i
                                class="fas fa-money-check"></i></span> Tasks</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-4">
                    <a class="nav-link link-text text-ref text-muted" href="admin/verify"><span><i
                                class="fas fa-money-check"></i></span> Verify</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-4">
                    <a class="nav-link link-text text-ref text-muted" href="/admin/logout"><span>
                        <i class="fas fa-sign-out-alt"></i>></i></span> Logout</a>
                </li>
            </ul>
        </nav>
        <div class="container mt-3">
            <div class="col-md-12 pb-5">
                <div class="col-12">
                    <h4 class="text-center p-3">All Users</h4>
                </div>
                <div>
                    <input type="text" id="searchBar" class="form-control" placeholder="Seach for User">
                </div>
                <div class="table-responsive text-nowrap mt-3 mb-5 pb-5">
                    <table class="table overflow-auto">
                        <thead>
                            <tr>

                                <th scope="Status">Username</th>
                                <th scope="Date">Bank account</th>
                                <th scope="Date">Account number</th>
                                <th scope="Date">Phone Number</th>
                                <th scope="Date">Balance</th>
                                <th scope="Date">Date Registered</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">

                            <% data.filter(function(item){ %>
                                
                            <tr class="tableRow">
                                <td class="userName"><%= item.username %></td>
                                <td><%= item.accountbank %></td>
                                <td><%= item.accountnumber %></td>
                                <td><%= item.number %></td>
                                <td><%= total %></td>
                                <td><%= item.date %></td>
                            </tr>
                            <% }); %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script src="js/dashboard.js"></script>
