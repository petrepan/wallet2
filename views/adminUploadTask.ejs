    <body>
        <nav class="shadow-sm navigation">
            <div class="d-flex justify-content-between align-items-center px-1">
                <a class="imgnone py-3 pl-1" href="index.html">
                    <img src="/img/TweetWallet green.jpg" width="150" alt="">
                </a>
                <div class="letterx"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12">
                        </path>
                    </svg></div>
            </div>

            <ul>
                <li class="nav-item navigation" data-tab="tab-1">
                    <a class="nav-link link-text text-ref text-muted" href="/admin"><span><i
                                class="fas fa-rocket"></i></span> All Users</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-2">
                    <a class="nav-link link-text text-ref text-muted" href="/admin/withdrawal"><span><i
                                class="fas fa-life-ring"></i></span> Withdrawal</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-3">
                    <a class="nav-link link-text text-ref text-muted" href="/admin/task"><span><i
                                class="fas fa-money-check"></i></span> Tasks</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-4">
                    <a class="nav-link link-text text-ref text-muted" href="/admin/verify"><span><i
                                class="fas fa-money-check"></i></span> Verify</a>
                </li>
                <li class="nav-item navigation current" data-tab="tab-4">
                    <a class="nav-link link-text text-ref text-muted" href="/admin/upload"><span><i
                                class="fas fa-cloud-upload-alt"></i></span> Upload</a>
                </li>
            </ul>
        </nav>
        <div class="menu-bar">
            <span><i class="fas fa-bars"></i></span>
        </div>
        <div class="container mt-3 mb-5">
            <%- include('partials/messages') %>
            <form action="/admin/upload?_method=PUT" method="POST" enctype="multipart/form-data" class="form-group">
                <div class="card-body card-paragraph">
                    <input type="file" name="imgtask1" id="imgtask1">
                    <textarea name="task1" id="task1" cols="30" rows="2" placeholder="task one"></textarea>
                    <input type="file" name="imgtask2" id="imgtask1">
                    <textarea name="task2" id="task2" cols="30" rows="2" placeholder="task two"></textarea>
                    <input type="file" name="imgtask3" id="imgtask1">
                    <textarea name="task3" id="task3" cols="30" rows="2" placeholder="task three"></textarea>
                    <input type="submit" value="Upload" class="btn btn-success" />
                </div>
            </form>

            <div class="mx-4 mb-5 pb-5">
                <form action="/admin/togglewithdraw" method="POST">
                    <h5>Click button to toggle withdrawal</h5>
                    <% if(!admin.togglewithdrawal) {%>
                    <input type="checkbox" name="togglewithdrawal" class="d-none">
                    <button class="btn btn-danger">click me</button>
                    <% }else{ %>
                    <input type="checkbox" name="togglewithdrawal" class="d-none" checked>
                    <button class="btn btn-success">click me</button>
                    <% } %>

                </form>
            </div>
        </div>
        <script src="/js/dashboard.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
