    <body>
        <nav class="shadow-sm">
            <a class="imgnone" href="index.html">
                <img src="img/TweetWallet green.jpg" width="200" height="50" alt="">
            </a>

            <ul>
                <li class="nav-item navigation" data-tab="tab-1">
                    <a class="nav-link link-text text-ref text-muted" href="/dashboard"><span><i
                                class="fas fa-rocket"></i></span> Choose a plan</a>
                </li>
                <li class="nav-item navigation" data-tab="tab-2">
                    <a class="nav-link link-text text-ref text-muted" href="/task"><span><i
                                class="fas fa-life-ring"></i></span> Overview</a>
                </li>
                <li class="nav-item navigation current" data-tab="tab-3">
                    <a class="nav-link link-text text-ref text-muted" href="/withdraw"><span><i
                                class="fas fa-money-check"></i></span> Withdraw</a>
                </li>
            </ul>
        </nav>

        <main role="main" class="mt-4">
            <div class="container">
                <header class="row justify-content-between pt-4 pl-3 pr-3 pb-5">
                    <div>
                        <span class="text-muted">Howdy</span> <span class="username"> <%= user.username %>
                            &#9995;</span>
                    </div>
                    <a class="pr-1" href="/profile/<%= user.id %>"><i class="fas text-success fa-user-circle">

                        </i></a>
                </header>
                <%- include('partials/messages') %>


                <!--WITHDRAWAL-->


                <div id="tab-3" class=" pb-5">
                    <h3 class="todaytask">Withdraw Funds</h3>
                    <div class="col-12 mt-3">
                        <h6 class="text-muted m-0">INFO</h6>
                        <div class="alert h5-text alert-success">

                            You can only withdraw on Saturdays. <br>
                            Payments would be processed before 24hours.

                        </div>
                    </div>
                    <hr>
                    <div class="container pt-5">
                        <div class="col-sm-6 withdrawss">
                            <h4 class="cplan">BALANCE</h4>
                            <h4 class="amount">

                                <% if(task === null){ %>
                                <span id="dashBalance"> 0</span> <span></span>
                                <% } else { %>
                                <span id="dashBalance"> <%= total %></span> <span></span>
                                <% } %>




                            </h4>
                        </div>
                    </div>




                    <div class="container pt-3 mb-5">
                        <div class="row">
                            <div class="col-md-6">

                                <div id="result"></div>

                                <form action="/withdraw" method="POST" id="form">
                                    <div class="form-group">
                                        <label class="d-none">Username</label>
                                        <input type="text" name="username" id="username"
                                            class="form-control d-none input-md" tabindex="1"
                                            value="<%= user.username %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="d-none">Account Name</label>
                                        <input type="text" name="accountname" id="accountname"
                                            class="form-control d-none input-md" tabindex="1"
                                            value="<%= user.accountname %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Withdrawal Amount (â‚¦)</label>
                                        <input type="number" name="amountwithdraw" id="amountWithdraw"
                                            class="form-control input-md" tabindex="1" required>
                                    </div>

                                    <div class="form-group">
                                        <label>Bank Account Number</label>
                                        <input name="accountnumber" id="accountnumber" class="form-control input-md"
                                            tabindex="1" value="<%= user.accountnumber %>" required>
                                    </div>

                                    <div class="form-group">
                                        <label>Bank</label>
                                        <input type="text" id="amount" class="form-control input-md" name="accountbank"
                                            value="<%= user.accountbank %>" tabindex="1" required>
                                    </div>
                                    <% if(plan === null){ %>
                                        
                                    <button type="submit" id="submitBtn" class="btn bg-success text-light" disabled>Make
                                        Withdrawal</button>
                                        <p class="text-danger">contact admin to subscribe to a new plan</p>
                                    <% } else { %>
                                    <button type="submit" id="submitBtn" class="btn bg-success text-light" disabled>Make
                                        Withdrawal</button>
                                    <% } %>

                                    <br><br>
                                </form>
                            </div>



