            }

            .currentplan {
                border: 1px solid green;
                padding: 16px;
                border-radius: 6px;
            }

            .cplan {
                font-weight: 100;
                font-size: 13px;
            }

            .todaytask::before {
                content: "";
                background-color: rgba(0, 102, 0, 0.278);
                bottom: 0;
                height: 15px;
                width: 150px;
                position: absolute;
                z-index: -1;
            }

            .todaytask {
                position: relative;
                z-index: 1;
            }

            .withdrawss {
                border: 1px solid green;
                padding: 16px;
                border-radius: 6px;
            }

            .amount {
                font-size: 32px;
            }

            .copy {
                font-size: 16px;
            }

            .back a {
                background: #ccc;
                color: rgb(126, 114, 114);
                padding: 8px 16px;
                border-radius: 7px;
                text-decoration: none;
